
:ruby
  case I18n.locale.to_s
  when "fr", "ru", "zh-TW", "ko", "de", "nl"
    image_dir = I18n.locale
  when "pt", "pt-BR"
    image_dir = "pt-BR"
  when "es", "es-ES"
    image_dir = "es"
  when "zh", "zh-CN"
    image_dir = "zh-CN"
  else image_dir = "en"
  end

- events_link = "https://events.bible.com/#{image_dir}/"

.MobileDropdown
  .close-dropdown-btn-mobile
    %img{:alt => "", "data-no-retina" => "", :src => image_path("features/events/close.svg"), :style => "width:26px;"}/
  %ul.mobile-menu
    %li
      %a.features-btn{:href => '/features/events'}=t('events.menu.features')
    %li
      %a{:href => '/features/events-faq'}=t('events.menu.faq')
    %li
      %a{:href => '/features/events-resources'}=t('events.menu.resources')
.wrap
  .header-wrap.fixed-header
    .header
      .mobile-menu-btn.show-mobile
        %img{:alt => "", "data-no-retina" => "", :src => image_path("features/events/menu-icon.svg"), :style => "width:19px;"}/
      %a.logo{:href => "/features/events"}
        %img.logo-white{:alt => "", "data-no-retina" => "", :src => image_path("features/events/#{image_dir}/yv-logo-white.svg")}/
        %img.logo-black{:alt => "", "data-no-retina" => "", :src => image_path("features/events/#{image_dir}/yv-logo-gray.svg")}/
      %ul.main-nav
        %li
          %a.features-btn{:href => '/features/events'}=t('events.menu.features')
        %li
          %a{:href => '/features/events-faq'}=t('events.menu.faq')
        %li
          %a{:href => '/features/events-resources'}=t('events.menu.resources')
        %li.btn2
          %a{:href => "mailto:?subject=#{t('events.mail subject')}&body=#{t('events.mail body')}", :target => "_blank"}=t('events.menu.tell your church')
        %li.btn2
          %a{:href => events_link}=t('events.menu.create an event')
      .clearfix
    / //header
  / //header-wrap
  .sub-content
    .marketyourevent-content
      .row-one
        %h1=t('events.spread the word')
        .laptop-image
          .imagebox
            %img.lazy{:alt => "", "data-no-retina" => "", "data-src" => image_path("features/events/shadows-case-screen.png"), :src => ""}/
          .right-col
            .url-box https://bible.com/events/2342
            .callout
              %img{:alt => "", :src => image_path("features/events/callout.png")}/
          .clearfix
        / //laptop-image
        .btm-text
          %p=t('events.resources intro')
      / //row-one
      .row-two
        .intro-text
          %h1=t('events.free resources title')
        .boxes
          .each-box
            %iframe.imagebox2{:allowfullscreen => "", :frameborder => "0", :height => "", :src => "https://www.youtube.com/embed/yNr7QwuAECU", :width => ""}
            %p=t('events.resources video')
          .each-box
            %a{ :href => 'https://open.church/resources/2567-youversion-events/'}
              .imagebox-social
            %p=t('events.resources social').html_safe

          .each-box
            %a{ :href => 'https://open.church/resources/2567-youversion-events/'}
              .imagebox-slides
            %p=t('events.resources slides').html_safe
          .each-box
            %a{ :href => 'https://open.church' }
              .imagebox-open
            %p=t('events.resources more').html_safe
          .clearfix
        .clearfix
    / //marketyourevent-content
  / //sub-content
  %ul.footer-social-icons
    %li
      %a{:href => "https://www.facebook.com/sharer/sharer.php?u=http://www.bible.com/features/events", :target => "_blank"}
        %span.icon.facebook
        =t('events.share')
    %li
      %a{:href => "https://twitter.com/intent/tweet?text=#{t('events.tweet text')}", :target => "_blank"}
        %span.icon.twitter
        Tweet
    %li
      %a{:href => "mailto:?subject=#{t('events.mail subject')}&body=#{t('events.mail body')}", :target => "_blank"}
        %span.icon.email
        =t('events.email')
/ //wrap
